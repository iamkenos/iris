{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "paths": {
      "@iamkenos/iris": ["src/index"],
      "@iamkenos/iris/*": ["src/*"],
      "@common": ["src/common/index"],
      "@common/*": ["src/common/*"],
      "@client": ["src/client/index"],
      "@client/*": ["src/client/*"],
      "@steps": ["src/steps/index"],
      "@steps/*": ["src/steps/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "types": ["node", "@types/jest"]
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules", "build"]
}
